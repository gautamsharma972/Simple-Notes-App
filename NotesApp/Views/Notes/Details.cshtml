@model NotesViewModel
@{
    ViewData["Title"] = Model.Title;
}

<h5>@Model.Title <a class="text-primary float-right" style="font-size:medium" asp-action="Index" asp-controller="Notes">< Back to List</a></h5>
<small class="text-muted">
    Created on @Model.CreatedOn.ToShortDateString() |
    <a asp-action="Edit" asp-controller="Notes" asp-route-id="@Model.Id">Edit</a> |
    <a href="javascript:void(0);" class="text-danger" data-toggle="modal" data-target="#deleteModal">
        Delete
    </a>

</small>
<hr />
<p>
    @Model.Description
</p>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Sure to Delete?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure to delete - @Model.Title
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Notes" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
               
            </div>
        </div>
    </div>
</div>
