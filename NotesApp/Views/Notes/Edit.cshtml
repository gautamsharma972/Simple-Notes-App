@model NotesInputModel
@{
    ViewData["Title"] = "Edit";
}

<h5>@(Model.Title==null?"Create a Note":"Edit - "+Model.Title)
    <a asp-action="Index" asp-controller="Notes" class="text-primary float-right" style="font-size:medium">< Back to List</a>
    </h5>
<hr />
<div class="form-group row">
    <div class="w-100">
        <form asp-action="Edit" asp-controller="Notes" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Title"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input class="btn btn-primary" value="Save" type="submit" />
                    <a asp-action="Index" asp-controller="Notes" class="btn btn-secondary">Cancel</a>
                </div>
            </div>

        </form>

    </div>



</div>
